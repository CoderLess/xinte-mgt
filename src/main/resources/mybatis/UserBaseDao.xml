<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ibn.xinte.dao.UserBaseDao">
    <sql id="UserBaseDO_Columns">
        <trim suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="username != null">username,</if>
            <if test="mobile != null">mobile,</if>
            <if test="sex != null">sex,</if>
            <if test="birthday != null">birthday,</if>
            <if test="disable != null">disable,</if>
            <if test="createTime != null">create_time,</if>
            <if test="adminId != null">admin_id,</if>
        </trim>
    </sql>

    <sql id="UserBaseDO_Values">
        <trim suffixOverrides=",">
            <if test="id != null">#{ id },</if>
            <if test="username != null">#{ username },</if>
            <if test="mobile != null">#{ mobile },</if>
            <if test="sex != null">#{ sex },</if>
            <if test="birthday != null">#{ birthday },</if>
            <if test="disable != null">#{ disable },</if>
            <if test="createTime != null">#{ createTime },</if>
            <if test="adminId != null">#{ adminId },</if>
        </trim>
    </sql>

    <sql id="baseColumn">
		`id`,
		`username`,
		`mobile`,
		`sex`,
		`birthday`,
		`disable`,
		`create_time`,
		`admin_id`
	</sql>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into user_base (<include refid="UserBaseDO_Columns"/>)
        values(<include refid="UserBaseDO_Values"/>)
    </insert>

    <insert id="saveBatch" parameterType="java.util.List">
        insert into user_base (<include refid="baseColumn"/>)
        values
        <foreach collection="list" index="index" item="item" separator=",">
            (
            #{ item.id },
            #{ item.username },
            #{ item.mobile },
            #{ item.sex },
            #{ item.birthday },
            #{ item.disable },
            #{ item.createTime },
            #{ item.adminId }
            )
        </foreach>
    </insert>
    <update id="updateById">
        update user_base
        <set>
            <if test="id != null">`id` = #{id},</if>
            <if test="username != null">`username` = #{username},</if>
            <if test="mobile != null">`mobile` = #{mobile},</if>
            <if test="sex != null">`sex` = #{sex},</if>
            <if test="birthday != null">`birthday` = #{birthday},</if>
            <if test="disable != null">`disable` = #{disable},</if>
            <if test="createTime != null">`create_time` = #{createTime},</if>
            <if test="adminId != null">`admin_id` = #{adminId},</if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteById">
		delete from user_base where id = #{id}
	</delete>

    <select id="queryById" resultType="com.ibn.xinte.entity.UserBaseDO">
        select
        <include refid="baseColumn"/>
        from user_base where id = #{id}
    </select>

    <sql id="queryColumn">
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null">
                and username like concat('%', #{username}, '%')
            </if>
            <if test="mobile != null">
                and mobile = #{mobile}
            </if>
            <if test="sex != null">
                and sex = #{sex}
            </if>
            <if test="birthday != null">
                and birthday = #{birthday}
            </if>
            <if test="disable != null">
                and disable = #{disable}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="adminId != null">
                and admin_id = #{adminId}
            </if>
        </where>
    </sql>

    <select id="queryList" resultType="com.ibn.xinte.entity.UserBaseDO">
        select
        <include refid="baseColumn"/>
        from user_base
        <include refid="queryColumn"/>
    </select>
    <select id="queryListByDTO" resultType="com.ibn.xinte.entity.UserBaseDO" parameterType="com.ibn.xinte.domain.UserBaseDTO">
        select
        <include refid="baseColumn"/>
        from user_base
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null">
                and username like concat('%', #{username}, '%')
            </if>
            <if test="mobile != null">
                and mobile = #{mobile}
            </if>
            <if test="sex != null">
                and sex = #{sex}
            </if>
            <if test="birthday != null">
                and birthday = #{birthday}
            </if>
            <if test="disable != null">
                and disable = #{disable}
            </if>
            <if test="createTimeStart != null">
                and create_time &gt;= #{createTimeStart}
            </if>
            <if test="createTimeEnd != null">
                and create_time &lt;= #{createTimeEnd}
            </if>
            <if test="adminId != null">
                and admin_id = #{adminId}
            </if>
        </where>
    </select>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ibn.xinte.dao.MedicineStoreDao">
    <sql id="MedicineStoreDO_Columns">
        <trim suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="medicineId != null">medicine_id,</if>
            <if test="number != null">number,</if>
        </trim>
    </sql>

    <sql id="MedicineStoreDO_Values">
        <trim suffixOverrides=",">
            <if test="id != null">#{ id },</if>
            <if test="medicineId != null">#{ medicineId },</if>
            <if test="number != null">#{ number },</if>
        </trim>
    </sql>

    <sql id="baseColumn">
		`id`,
		`medicine_id`,
		`number`
	</sql>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into medicine_store (<include refid="MedicineStoreDO_Columns"/>)
        values(<include refid="MedicineStoreDO_Values"/>)
    </insert>

    <insert id="saveBatch" parameterType="java.util.List">
        insert into medicine_store (<include refid="baseColumn"/>)
        values
        <foreach collection="list" index="index" item="item" separator=",">
            (
            #{ item.id },
            #{ item.medicineId },
            #{ item.number }
            )
        </foreach>
    </insert>
    <update id="updateById">
        update medicine_store
        <set>
            <if test="id != null">`id` = #{id},</if>
            <if test="medicineId != null">`medicine_id` = #{medicineId},</if>
            <if test="number != null">`number` = #{number},</if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteById">
		delete from medicine_store where id = #{id}
	</delete>

    <select id="queryById" resultType="com.ibn.xinte.entity.MedicineStoreDO">
        select
        <include refid="baseColumn"/>
        from medicine_store where id = #{id}
    </select>

    <sql id="queryColumn">
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="medicineId != null">
                and medicine_id = #{medicineId}
            </if>
            <if test="number != null">
                and number = #{number}
            </if>
        </where>
    </sql>

    <select id="queryList" resultType="com.ibn.xinte.entity.MedicineStoreDO">
        select
        <include refid="baseColumn"/>
        from medicine_store
        <include refid="queryColumn"/>
    </select>
</mapper>